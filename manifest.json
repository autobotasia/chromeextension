{
    "manifest_version": 2,
    "name": "Grammar Button",
    "version": "1.0",
    "description": "Change the value when users click the button",
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": ["content.js"]
      }
    ],
    "permissions": [
      "activeTab",
      "tabs"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }